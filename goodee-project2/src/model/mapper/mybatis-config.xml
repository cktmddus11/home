<?xml version="1.0" encoding="UTF-8" ?>
<!--  주석 바로 윗줄에 넣으면 에러남  -->
<!--  !DOCTYPE : xml 문서 작성 규칙을 지정한 파일을 지정 -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org/DTD config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--  국제 public, 개인 system 파일 구별 -->
<configuration> <!--  루트  -->
	<properties resource="model/mapper/mybatis.properties" />
	<typeAliases> <!--  패키지 명 별명으로 사용할수있게 설정 -->
		<!-- <typeAlias type="model.Member" alias="Member"/> --> <!-- xml사용시 쓰는데 우린 인터페이스라서 필요없 -->
		<!-- <typeAlias type="model.Board" alias="Board"/> -->
	</typeAliases>
	<!-- db Connetion설정  -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driver}"/>
				<property name="url" value="${jdbc.url}"/>
				<property name="username" value="${jdbc.username}"/>
				<property name="password" value="${jdbc.password}"/>
			</dataSource>
		</environment>
	</environments>
	<!-- 사용할 sql 구문을 저장한 xml, interface을 설정 -->
	<mappers> <!--  설정방법 3가지 -->
 		<package name="model.mapper"/>
	</mappers>
</configuration>